{
  "include": ["src/**/*.ts", "types/**/*.d.ts", "src/adaptive/index.tsx"],
  "declaration": true,
  "compilerOptions": {
    "jsx": "react-jsx",
    // "target": "esnext",
    // "module": "esnext",
    // "moduleResolution": "node",
    // "esModuleInterop": true
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "customConditions": ["source"],
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
  },
}
